<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.study2gather">

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyAC7OARm72oVEewWpCfWhxroH5P6W9yenA" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:background="@color/black"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Study2Gather"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.messages.MessagesChat"></activity>
        <activity
            android:name=".Splash"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".Registration"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".ForgotPassword"
            android:label="@string/forgotPasswordTitle" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Study2Gather" />
        <activity
            android:name=".ui.home.HomeCreatePost"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".ui.forum.ForumCreateQuestion"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".ui.forum.ForumQuestionDetails"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".ui.forum.ForumCreateAnswer"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".ui.courses.CoursesDetails"
            android:label="@string/coursesTitle"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.MainActivity"
                android:value="com.example.study2gather" />
        </activity>
        <activity
            android:name=".ui.messages.MessagesCreateChat"
            android:label="@string/messagesCreateChatTitle" />
        <activity
            android:name=".ui.profile.ProfileEdit"
            android:label="@string/profileEditTitle" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>