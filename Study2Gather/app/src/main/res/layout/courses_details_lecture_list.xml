<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coursesDetailsLecture"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo"
            android:text="@string/coursesCourseDetailLect1"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/coursesDetailsLectureSlide"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_extrabold"
            android:text="@string/coursesCourseDetailLect1Slide"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/coursesDetailsDownloadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/purple_700"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_arrow_circle_down_white_24dp" />

    </LinearLayout>

</LinearLayout>