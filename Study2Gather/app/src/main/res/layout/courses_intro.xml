                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_done_white_24dp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/exo"
                    android:textSize="13sp"
                    android:paddingTop="10dp"
