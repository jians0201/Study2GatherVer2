                    android:drawablePadding="15dp"
                    android:fontFamily="@font/exo"
                    android:textSize="13sp"
                    android:paddingTop="10dp"
                    android:text="@string/coursesCourseDetailsWYLDetails5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_done_white_24dp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/exo"
                    android:textSize="13sp"
                    android:paddingTop="10dp"
                    android:text="@string/coursesCourseDetailsWYLDetails6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/coursesDetailsLecture"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo"
                    android:text="@string/coursesCourseDetailLect1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/coursesDetailsLectureSlide"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_extrabold"
                    android:text="@string/coursesCourseDetailLect1Slide"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

